#!groovy
properties([disableConcurrentBuilds()])

pipeline {
    agent any
    options {
        timestamps()
    }
    stages {
        stage("First step") {
            steps {
		sh 'pwd'
		sh 'pip3 install -r requirements.txt'
            }
        }
        stage("Second step") {
            steps {
                sh 'pytest -v --junitxml=report.xml'
				junit 'reports/**/*.xml' 
            }
        }
    }
}

