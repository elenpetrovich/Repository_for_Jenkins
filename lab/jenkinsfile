#!groovy
properties([disableConcurrentBuilds()])

pipeline {
    agent {
        label 'master'
        }
    options {
        timestamps()
    }
    stages {
        stage("First step") {
            steps {
                git 'https://github.com/elenpetrovich/Repository_for_Jenkins'
				sh 'pip install -r requirements.txt'
            }
        }
        stage("Second step") {
            steps {
                sh 'pytest -v --junitxml=report.xml'
				junit 'reports/**/lab/report.xml'
            }
        }
    }
}

